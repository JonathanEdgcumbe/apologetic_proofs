<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/buttons</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/holo_blue_bright</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorSecondary">@color/writing</item>
        <item name="android:textColorPrimary">@color/writing</item>
        <item name="android:textColorSecondaryInverse">@android:color/holo_orange_dark</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColorPrimaryInverse">@color/buttons</item>
        <item name="android:colorForeground">@color/writing</item>
    </style>

    <style name="MainBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:background">@drawable/button_final</item>
    </style>

    <style name="Headings">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">15sp</item>
        <item name="android:layout_marginBottom">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/writing</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDescriptions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">15sp</item>
        <item name="android:layout_marginEnd">5sp</item>
        <item name="android:textColor">@color/writing</item>
    </style>
</resources>